body {
    font-family: Arial, sans-serif;
    background-color: #f4f4f4;
    color: #333;
    margin: 0;
    padding: 0;
}
header {
    background-color: #007BFF;
    color: white;
    padding: 10px 20px;
    text-align: center;
}
nav ul {
    list-style-type: none;
    padding: 0;
}
nav ul li {
    display: inline;
    margin-right: 10px;
}
nav ul li a {
    color: white;
    text-decoration: none;
}
main {
    padding: 20px;
    text-align: center;
}
footer {
    background-color: #333;
    color: white;
    text-align: center;
    padding: 10px 0;
    position: fixed;
    bottom: 0;
    width: 100%;
}
.scenario {
    margin-bottom: 20px;
    padding: 10px;
    background-color: #f9f9f9;
    border: 1px solid #ddd;
}

.scenario img {
    width: 100%; /* Responsive images */
    height: auto;
    margin-bottom: 10px;
}

.scenario p {
    font-size: 18px; /* Larger text for readability */
}

.scenario button {
    padding: 10px 20px;
    font-size: 16px;
    margin-top: 10px;
    cursor: pointer;
}
.scam-section {
    background-color: #f9f9f9;
    border-left: 5px solid #007BFF;
    margin: 20px 0;
    padding: 20px;
}

.scam-section h3 {
    color: #333;
}

.scam-section ul {
    list-style-type: disc;
    margin-left: 20px;
}

.scam-section img {
    width: 100%;  /* Responsive image */
    height: auto;
    margin-top: 20px;
}
.scams-overview h2 {
    font-size: 1.8em;
    color: #CC0000;
    margin-bottom: 10px;
}

.scams-overview h3 {
    font-size: 1.5em;
    margin-top: 20px;
    color: #CC0000;
}

.scams-overview p {
    font-size: 1em;
    margin-bottom: 10px;
}

.scams-overview p strong {
    font-weight: bold;
}
.scams-overview .scam-item {
    display: flex;
    align-items: center;
    margin-bottom: 20px;
}

.scams-overview .scam-item img {
    max-width: 100px; /* Adjust width as needed */
    margin-right: 20px;
}

.scams-overview .scam-item div {
    flex: 1;
}

.scenario-container {
    text-align: center;
}

.caller-profile img {
    width: 100px; /* Adjust as needed */
    height: auto;
    margin-right: 20px;
}

.decision-buttons button {
    margin: 10px;
    padding: 5px 15px;
}

/* This class will hide the explanation by default */
.result-hidden {
    display: none;
}

/* This class will show the explanation */
.result-shown {
    display: block;
}

.result-container {
    text-align: center;
    background-color: #ffe0e9; /* Pink background, adjust the color to match the image */
    padding: 20px;
}

.result-container h2, .result-container h3 {
    color: #db143c; /* Adjust the color to match the image */
}

.result-details {
    background-color: #ffffff; /* White background for the text */
    border-radius: 10px;
    padding: 20px;
    margin: 20px 0;
}

.result-details p {
    background-color: #ffcccb; /* Light red for oval shapes, adjust the color to match the image */
    border-radius: 50px;
    padding: 10px 20px;
    margin: 10px 0;
    position: relative;
}

.result-details p:before {
    content: 'âœ“';
    position: absolute;
    left: -25px; /* Adjust based on actual layout and padding */
    top: 50%;
    transform: translateY(-50%);
    background-color: #4BB543; /* Green color for the checkmark background */
    color: white;
    border-radius: 50%;
    padding: 5px;
    width: 20px; /* Adjust the size as needed */
    height: 20px; /* Adjust the size as needed */
    text-align: center;
    line-height: 20px; /* Adjust the line height to match the width/height */
}




